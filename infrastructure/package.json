{
  "name": "@dropify/infrastructure",
  "version": "0.1.0",
  "private": true,
  "description": "AWS CDK infrastructure for Dropify",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts ./bin ./lib",
    "test": "jest --passWithNoTests",
    "cdk": "cdk",
    "synth": "npm run build && cdk synth",
    "diff": "npm run build && cdk diff",
    "deploy": "npm run build && cdk deploy",
    "destroy": "npm run build && cdk destroy",
    "deploy:dev": "npm run build && cdk deploy dropify-dev",
    "deploy:prod": "npm run build && cdk deploy dropify-prod",
    "bootstrap": "cdk bootstrap",
    "setup": "bash ./scripts/setup.sh",
    "deploy:script": "bash ./scripts/deploy.sh"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.529.0",
    "@aws-sdk/lib-dynamodb": "^3.529.0",
    "@aws-sdk/client-s3": "^3.529.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.529.0",
    "@aws-sdk/client-cognito-identity": "^3.529.0",
    "aws-cdk-lib": "^2.160.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.136",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "aws-cdk": "^2.160.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.18"
  }
}
